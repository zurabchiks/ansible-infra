[server]
protocol = http
http_addr = {{ grafana_web_listen_address | regex_replace(':.*$', '') }}
http_port = {{ grafana_web_listen_address | regex_replace('^.*:', '') }}
domain = {{ grafana_domain | default('localhost') }}

[database]
type = sqlite3
path = /var/lib/grafana/grafana.db

[session]
provider = file
provider_config = /var/lib/grafana/sessions

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}
secret_key = {{ grafana_secret_key | default('SW2YcwTIb9zpOOhoPsMm') }}

[auth.anonymous]
enabled = {{ grafana_anonymous_access | default('false') }}

[auth.basic]
enabled = {{ grafana_basic_auth | default('true') }}

[users]
allow_sign_up = {{ grafana_allow_signup | default('false') }}
